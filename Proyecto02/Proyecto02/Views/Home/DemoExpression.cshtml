@model Proyecto02.Models.Product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DemoExpression</title>
</head>
<body>
    <div> 
        <table>
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <td>Price:</td>
                    <td>@Model.Precio</td>
                </tr>
                @*<tr>
                    <td>Stock Level:</td>
                    <td>@ViewBag.ProductCount</td>
                </tr>*@
                <tr>
                    <td>Stock Level:</td>
                    <td>
                        <!-- el viewBag llega como string-->
                        @switch ((int)ViewBag.ProductCount)
                        {
                            case 0:
                                @: Out of Stock
                                break;
                            case 1:
                                <b>Low Stock: (@ViewBag.ProductCount)</b>
                                break;
                            default:
                                @ViewBag.ProductCount;
                                break;
                        }
                    </td>
                </tr>
            </tbody>
        </table>
        
        <br />

        <div data-discount="@ViewBag.ApplyDiscount">
            The containing element has data attributes
        </div>

        Discount: <input type="checkbox" checked="@ViewBag.ApplyDiscount" />
        Express: <input type="checkbox" checked="@ViewBag.ExpressShip" />
        Supplier: <input type="checkbox" checked="@ViewBag.Supplier" />
    </div>
</body>
</html>
